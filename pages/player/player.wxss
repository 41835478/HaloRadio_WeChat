/* player.wxss */
.cover{
  border-radius: 5px;
  margin:20px;
}
.timeline{
  display:flex;
  align-items: center;
}

.seeker{
  width:100%;
  background-color:rgba(0,0,0,.05);
  height:5px;
  position:relative;
  border-radius: 10px;
}
.seeker .thumb{
  width:30px;
  height:30px;
  border-radius: 100%;
  box-shadow: 1px 1px 3px rgba(0,0,0,.3);
  background-color: rgba(255,255,255,1);
  position:absolute;
  top:50%;
  transform: translate(-50%,-50%);
 
}

.seeker .downloadPercent{

  background-color:rgba(0,0,0,.05);
  height:100%;
  position:absolute;
  border-radius: 10px;
}
.seeker .timePercent{
  width:10px;
  height:100%;
  background-color:#159570;
  position:absolute;
  border-radius: 10px;
}

.playCtrl{
  display:flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin:10px 20px 40px 20px;
  
  
}

.playCtrl .playPause{
  width:70px;
  height:40px;
  padding:5px;
  box-shadow: 1px 1px 4px rgba(0,0,0,.1);
  background-color: #ffffff;
  border-radius: 3px;
  box-sizing: border-box;

}
.playCtrl .playPause image{
  width:100%;
  height:100%;
  

}

.playPauseHover{
  transition: all .3s;
  background-color:rgba(185,244,188,1);
}

.timePane{
  box-shadow: 1px 1px 4px rgba(0,0,0,.1);
  background-color: #ffffff;
  border-radius: 3px;
  padding:2px 10px;
  margin:0px 10px;
  min-width: 50px;
  text-align: center;
  position:absolute;
  top:1px;
  right:1px;
}
